{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",             // ES Module support
    "moduleResolution": "node",   // resolves imports like Node does
    "outDir": "./dist",
    "rootDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
